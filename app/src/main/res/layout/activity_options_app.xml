<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img_background3"
    android:backgroundTintMode="screen"
    android:backgroundTint="#ABAAA3A3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsApp">

    <!--include layout="@layout/custom_toolbar_options"/-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageButton
            android:background="#00000000"
            android:id="@+id/back_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginRight="300dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="25dp"
            android:layout_centerInParent="false"/>

        <TextView
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:layout_height="wrap_content"
            android:text="@string/settings_bar"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/options_app"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</RelativeLayout>